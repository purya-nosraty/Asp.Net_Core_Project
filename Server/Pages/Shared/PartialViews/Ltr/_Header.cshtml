<header id="header">
	<nav class="navbar navbar-expand-lg navbar-dark bg-black fixed-top lineargradient">
		<div class="container">
			<a class="navbar-brand" asp-page="/Index">
				@(Resources.PageTitles.Index)
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							@(Resources.DataDictionary.Profile)
						</a>

						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li>
								<a class="dropdown-item" asp-page="/SignIn">@(Resources.DataDictionary.SignIn)</a>
							</li>

							<li>
								<a class="dropdown-item" href="#">@(Resources.DataDictionary.SignUp)</a>
							</li>

							<li>
								<hr class="dropdown-divider">
							</li>

							<li>
								<a class="dropdown-item" href="#">@(Resources.DataDictionary.SignOut)</a>
							</li>
						</ul>

					</li>
					<li class="nav-item">
						<a class="nav-link" asp-page="/About">
							@(Resources.PageTitles.About)
						</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" asp-page="/Contact">
							@(Resources.PageTitles.Contact)
						</a>
					</li>
				</ul>

				<form class="d-flex">
					<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">@(Resources.DataDictionary.Search)</button>
				</form>

				<partial name="PartialViews/_ChangeCulture" />
			</div>
		</div>
	</nav>
</header>