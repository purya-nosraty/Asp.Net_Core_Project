@page
@{
	ViewData["Title"] = "About";
}

<div class="row">
	<img src="~/Images/pn.jpg" alt="Profile Photo" id="profilePhoto" class="filter" asp-append-version=true />
	<hr />
	<img src="~/Images/theme.jpg" alt="Theme Photo" id="themePhoto" class="filter" asp-append-version=true />
	<hr />
	<img src="~/Images/violin.jpg" alt="Violin Photo" id="violinPhoto" class="filter" asp-append-version=true />
	<hr />
	<img src="~/Images/note.jpg" alt="Note Photo" id="notePhoto" class="filter" asp-append-version=true />
</div>

@section StyleSheets {
	<style>
		hr {
			color: red;
		}
	</style>
}